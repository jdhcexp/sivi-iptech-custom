<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Form View -->
        <record id="docs_sale_order_view_form" model="ir.ui.view">
            <field name="name">sale.order</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">

                <xpath expr="//button[@name='action_confirm']" position="replace">
                    <button name="action_confirm" id="action_confirm" data-hotkey="v"
                    string="Confirmar" class="btn-primary" type="object" context="{'validate_analytic': True}"
                    attrs="{'invisible': [('state', 'not in', ['sent','review'])]}"/>
                     <button name="action_quotation_send" id="action_quotation_send" data-hotkey="v"
                    string="Enviar por email" class="btn-secondary" type="object" context="{'validate_analytic': True}"
                    attrs="{'invisible': [('state', 'not in', ['review'])]}"/>
                     <button name="action_cancel" id="action_cancel" data-hotkey="v"
                    string="Cancelar" class="btn-secondary" type="object" context="{'validate_analytic': True}"
                    attrs="{'invisible': [('state', 'not in', ['review'])]}"/>
                </xpath>
                <xpath expr="//button[@name='action_quotation_send']" position="replace">
                     <button name="action_quotation_send" string="Enviar por Email" type="object" states="draft" class="btn-primary" data-hotkey="g" context="{'validate_analytic': True}"/>
                <button name="action_quotation_send" type="object" string="Send PRO-FORMA Invoice"
                    groups="sale.group_proforma_sales" class="btn-primary"
                    attrs="{'invisible': ['|', ('state', '!=', 'draft'), ('invoice_count','&gt;=',1)]}" context="{'proforma': True, 'validate_analytic': True}"/>
                </xpath>
                <xpath expr="//notebook" position="inside">
                    <page name="documents" string="Documentos">
                        <field name="docs_ids" >
                            <tree name="task products" editable="bottom">
<!--                                <field name="domain">[('type','=','equipos')]</field>-->
                                <field name="type" />
                                <field name="url" widget="url"/>
                            </tree>
                        </field>
                    </page>
                </xpath>
            </field>
        </record>

        <record id="email_template_edi_sale" model="mail.template">
        </record>
    </data>
</odoo>