	                      <t t-if="object.sh_company_id.email">
	                        <a t-attf-href="mailto:{{ object.sh_company_id.email }}" style="text-decoration:none; color: white;"><t t-out="object.sh_company_id.email" /></a>
	                        <br />
	                      </t>
	                      <t t-if="object.sh_company_id.website">
	                        <a t-attf-href="{{object.sh_company_id.website}}" style="text-decoration:none; color: white;">
	                          <t t-out="object.sh_company_id.website" />
	                        </a>
	                      </t>
	                    </td>
	                  </tr>
	                </table>
	              </td>
	            </tr>
	          </tbody>
	        </table>
	      </div>
	    </field>
	</record>
</odoo>