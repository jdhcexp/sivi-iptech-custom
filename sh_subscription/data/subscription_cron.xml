<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Auto Invoice Cron -->
        <record id="sh_ir_cron_subscription_auto_invoice" model="ir.cron">
            <field name="name">Auto Invoice Of Active Subscription</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="doall" eval="False"/>
            <field name="model_id" ref="model_sh_subscription_subscription"/>
            <field name="code">model._sh_create_auto_invoice()</field>
            <field name="state">code</field>
        </record>

        <!-- Auto Expire Cron -->
        <record id="sh_ir_cron_subscription_auto_expired" model="ir.cron">
            <field name="name">Auto Expired Subscription</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="doall" eval="False"/>
            <field name="model_id" ref="model_sh_subscription_subscription"/>
            <field name="code">model._sh_auto_expired_subscription()</field>
            <field name="state">code</field>
        </record>
        <!-- Auto Reminder Cron -->
        <record id="sh_ir_cron_subscription_auto_reminder" model="ir.cron">
            <field name="name">Auto Reminder Subscription</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="doall" eval="False"/>
            <field name="model_id" ref="model_sh_subscription_subscription"/>
            <field name="code">model._sh_auto_reminder_subscription()</field>
            <field name="state">code</field>
        </record>
        <record id="sh_ir_cron_subscription_auto_renew_button" model="ir.cron">
            <field name="name">Auto Renew Button visible Subscription</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="doall" eval="False"/>
            <field name="model_id" ref="model_sh_subscription_subscription"/>
            <field name="code">model._subscription_renew_button_visible()</field>
            <field name="state">code</field>
        </record>
    </data>
</odoo>