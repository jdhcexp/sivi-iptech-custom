<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Form View -->
        <record id="res_config_settings_view_form" model="ir.ui.view">
            <field name="name">res.config.settings</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="sale.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='module_delivery']/../../.." position="after">
                    <h2 class="mt32" groups="sh_subscription.group_user_sh_subscription">Subscription</h2>
                    <div class="row mt16 o_settings_container" id="subscription"  groups="sh_subscription.group_user_sh_subscription" >
                        <div class="col-xs-12 col-md-6 o_setting_box">
                            <div class="content-group">
                                <div class="mt16 row">
                                    <label for="sh_invoice_generated" class="col-xs-3 col-md-3 o_light_label"/>
                                    <div class="o_setting_right_pane">
                                         <field name="sh_invoice_generated" class="oe_inline" required="True" groups="sh_subscription.group_user_sh_subscription"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-xs-12 col-md-6 o_setting_box"> 
                            <div class="content-group">
                                <div class="mt16 row">
                                    <label for="sh_renewal_days" class="col-xs-3 col-md-3 o_light_label"/>
                                    <div class="o_setting_right_pane">
                                        <field name="sh_renewal_days" class="oe_inline" required="True" groups="sh_subscription.group_user_sh_subscription"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-xs-12 col-md-6 o_setting_box"> 
                            <div class="content-group">
                                <div class="mt16 row">
                                    <label for="sh_trial_period_setting" class="col-xs-3 col-md-3 o_light_label" string="Give Trial to one time"/>
                                    <div class="o_setting_right_pane">
                                        <field name="sh_trial_period_setting" class="oe_inline"  groups="sh_subscription.group_user_sh_subscription"/>
                                    </div>
                                </div>
                            </div>
                        </div> 
                        <div class="col-xs-12 col-md-6 o_setting_box">
                            <!-- <div class="o_setting_right_pane"> -->
                                <div class="content-group">
                                    <div class="mt16 row">
                                        <label for="sh_journal_id" class="col-xs-3 col-md-3 o_light_label"/>
                                        <div class="o_setting_right_pane">
                                            <field name="sh_journal_id" class="oe_inline" required="True" groups="sh_subscription.group_user_sh_subscription"/>
                                        </div>
                                    </div>
                                </div>
                            <!-- </div> -->
                        </div>
                        <div class="col-xs-12 col-md-6 o_setting_box"> 
                            <div class="content-group">
                                <div class="mt16 row">
                                    <label for="sh_default_attribute_id" class="col-xs-3 col-md-3 o_light_label" string="Product Attribute"/>
                                    <div class="o_setting_right_pane">
                                        <field name="sh_default_attribute_id" class="oe_inline"  groups="sh_subscription.group_user_sh_subscription"/>
                                    </div>
                                </div>
                            </div>
                        </div> 

                        <div class="col-xs-12 col-md-6 o_setting_box" attrs="{'invisible': [('sh_invoice_generated','=','draft')]}">
                            <div class="content-group">
                                <div class="mt16 row">
                                    <label for="sh_invoice_email" class="col-xs-3 col-md-3 o_light_label"/>
                                    <div class="o_setting_right_pane">
                                        <field name="sh_invoice_email" class="oe_inline" required="1" roups="sh_subscription.group_user_sh_subscription"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-xs-12 col-md-6 o_setting_box">
                            <!-- <div class="o_setting_right_pane"> -->
                                <div class="content-group">
                                    <div class="mt16 row">
                                        <label for="sh_paid_subscription_journal" class="col-xs-3 col-md-3 o_light_label" attrs="{'invisible':[('sh_invoice_generated','!=','paid')]}">Paid Payment Journal </label>
                                        <div class="o_setting_right_pane">
                                            <field name="sh_paid_subscription_journal"  groups="sh_subscription.group_user_sh_subscription" attrs="{'invisible':[('sh_invoice_generated','!=','paid')],'required':[('sh_invoice_generated','=','paid')]}"  class="oe_inline"/>
                                        </div>
                                    </div>
                                </div>
                            <!-- </div> -->
                        </div>
                        
                       
                        

                    </div>
                </xpath> 
            </field>
        </record>
    

    </data>
</odoo>