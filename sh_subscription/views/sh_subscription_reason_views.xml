<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Search view -->
    <record id="sh_subscription_reason_search_view" model="ir.ui.view">
        <field name="name">Subscription Reason</field>
        <field name="model">sh.subscription.reason</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="create_uid"/>
                <field name="create_date"/>
                <group  expand='0' string='Group by...'>
                    <filter string='name' name="name" domain="[]" context="{'group_by' : 'name'}"/>
                    <filter string='created by' name="create_uid" domain="[]" context="{'group_by' : 'create_uid'}"/>
                    <filter string='created date' name="create_date" domain="[]" context="{'group_by' : 'create_date'}"/>
                </group>
            </search>
        </field>
    </record>

       <!-- List view -->
    
    <record id="sh_subscription_reason_tree_view" model="ir.ui.view">
        <field name="name">Subscription Reason</field>
        <field name="model">sh.subscription.reason</field>
        <field name="arch" type="xml">
            <tree editable="bottom">
                <field name="sequence" widget="handle"/>
                <field name="name" />
                <field name="create_uid" optional="show" widget="many2one_avatar_user"/>
                <field name="create_date" optional="show"/>
            </tree>
        </field>
    </record>
        
       

    <!-- Action -->
   
    <record id="sh_subscription_reason_action" model="ir.actions.act_window">
        <field name="name">Subscription Reason</field>
        <field name="res_model">sh.subscription.reason</field>
        <field name="view_mode">tree</field>
    </record>
    
     <!-- Menu  -->
  
    <menuitem id="sh_subscription_reason_menu"
            name="Subscription Reason"
            parent="sh_subscription.sh_subscription_main_menu"
            action="sh_subscription_reason_action"
            sequence="15"/>
    
    
    </data>
</odoo>