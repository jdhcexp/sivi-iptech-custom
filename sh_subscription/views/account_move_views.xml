<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Form View -->
        <record id="sh_account_move_view_form" model="ir.ui.view">
            <field name="name">account.move</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='invoice_date']" position="after">
                    <field name="sh_subscription_id" groups="sh_subscription.group_user_sh_subscription"/>
                </xpath>
            </field>
        </record>
        <record id="action_sh_sh_account_move" model="ir.actions.act_window">
            <field name="name">account.move</field>
            <field name="res_model">account.move</field>
            <field name="view_mode">tree</field>
            <field name="domain">[('sh_subscription_plan_id', 'in', active_ids)]</field>
            <field name="context">{}</field>
        </record>
     </data>
</odoo>