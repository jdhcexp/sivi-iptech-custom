<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sh_subscription_report_search" model="ir.ui.view">
        <field name="name">Subscription Report</field>
        <field name="model">sh.subscription.report</field>
        <field name="arch" type="xml">
            <search string="Subscription Report">
                <field name="sh_subscription_plan_id" />
                <field name="sh_partner_id" />
                <field name="sh_sale_person" />
                <group expand="0" string="Group By">
                    <filter name="sh_subscription_plan_id" string="Subscription Plan" context="{'group_by':'sh_subscription_plan_id'}" />
                    <filter name="sh_partner_id" string="Customer" context="{'group_by':'sh_partner_id'}" />
                    <filter name="sh_sale_person" string="Sales Person" context="{'group_by':'sh_sale_person'}" />
                </group>
            </search>
        </field>
    </record>
    <record id="sh_subscription_report_report_pivot" model="ir.ui.view">
        <field name="name">Subscription Report</field>
        <field name="model">sh.subscription.report</field>
        <field name="priority">60</field>
        <field name="arch" type="xml">
            <pivot string="Subscription Report" sample="1" disable_linking="True">
                <field name="sh_month_price" type="measure"/>
                <field name="sh_subscription_plan_id" type="row"/>
            </pivot>
        </field>
    </record>
    
    
    <record id="sh_subscription_report_report_graph" model="ir.ui.view">
        <field name="name">Subscription Report</field>
        <field name="model">sh.subscription.report</field>
        <field name="arch" type="xml">
            <graph string="Subscription Report" sample="1">
                <field name="sh_month_price" type="measure"/>
                 <field name="sh_subscription_plan_id" type="row"/>
            </graph>
        </field>
    </record>

    <record id="sh_subscription_report_report_action" model="ir.actions.act_window">
        <field name="name">Subscription Report</field>
        <field name="res_model">sh.subscription.report</field>
        <field name="view_mode">pivot,graph</field>
        <field name="view_id" ref="sh_subscription_report_report_pivot"/>
    </record>

    <menuitem id="sh_subscription_report_menu"
            name="Subscription Report"
            parent="sale.menu_sale_report"
            action="sh_subscription_report_report_action"
            sequence="10"/>
     
</odoo>


   