<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
    <!-- Category -->
    <record model="ir.module.category" id="sh_subscription.module_category_sh_subscription">
        <field name="name">Subscription Category</field>
        <field name="description">Subscription Management</field>
        <field name="sequence">10</field>
    </record>
    
    <!-- Group -->
    <record id="group_user_sh_subscription" model="res.groups">
        <field name="name">User</field>
        <field name="category_id" ref="sh_subscription.module_category_sh_subscription"/>
    </record>

    <record id="group_manager_sh_subscription" model="res.groups">
        <field name="name">Manager</field>
        <field name="category_id" ref="sh_subscription.module_category_sh_subscription"/>
        <field name="implied_ids" eval="[(4, ref('sh_subscription.group_user_sh_subscription'))]"/>
    </record>
	<record model="ir.rule" id="sh_subscription_plan_comp_rule">
        <field name="name">Subscription Plan multi-company</field>
        <field name="model_id" ref="model_sh_subscription_plan"/>
        <field name="domain_force">[('company_id', 'in', company_ids)]</field>
    </record>
    <record model="ir.rule" id="sh_subscription_comp_rule">
        <field name="name">Subscription multi-company</field>
        <field name="model_id" ref="model_sh_subscription_subscription"/>
        <field name="domain_force">[('sh_company_id', 'in', company_ids)]</field>
    </record>
</data>
</odoo>
